rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to installer files only with a valid download token
    match /downloads/{platform}/{file} {
      allow read: if request.auth != null && 
                  request.auth.token.downloadAccess == true &&
                  request.auth.token.platform == platform;
      allow write: if false;  // Only allow uploads through admin SDK
    }
    
    // Deny access to all other files
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 