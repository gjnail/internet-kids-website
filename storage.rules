rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files in the downloads directory
    match /downloads/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Default rule - deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
} 